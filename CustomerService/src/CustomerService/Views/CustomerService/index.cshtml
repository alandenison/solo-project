@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims

<h2>customers for @User.Identity.Name</h2>
<hr />
@Html.ActionLink("Create new", "Create")
@model IEnumerable<CustomerService.Models.Customer>

<h2>Current Customers</h2>
<hr />

@if (Model.Any())
{
    <ul>
        @foreach (var listCustomer in Model)
        {
            <li>Name: @Html.DisplayFor(modelCustomer => listCustomer.Name)  || <span class="city-state">Address: </span> Zip: @Html.DisplayFor(modelCustomer => listCustomer.Zip)<button id="@listCustomer.Zip" class="show-city-state">Show city and state</button></li>
        }
    </ul>
    <button id="show-city-state">Show city and state</button>
}
else
{
    <p>No current customers</p>
}

@Html.ActionLink("Create new", "Create")

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $('.show-city-state').click(function () {
            var thisCustomer;
            thisCustomer = $(this).attr("id");
            alert(thisCustomer);
            $.ajax({
                type: 'GET',
                url: '@Url.Action("cityState")',
                success: function (result) {
                    $('.city-state').text(result);
                }
            });
        });

    });
</script>